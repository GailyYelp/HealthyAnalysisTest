<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/wall6"
    tools:context=".BodyHealthActivity"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="让身体更加健康"
            android:gravity="center"
            android:textColor="@color/blueviolet"
            android:textSize="20sp"
            />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:orientation="horizontal"
            >

            <android.support.v7.widget.CardView
                android:layout_marginLeft="40dp"
                android:layout_marginTop="20dp"
                android:layout_width="125dp"
                android:layout_height="150dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="5dp"
                app:cardBackgroundColor="@color/white"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >

                    <ImageView
                        android:id="@+id/yihuanzixun"
                        android:layout_marginLeft="13dp"
                        android:layout_marginTop="10dp"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@mipmap/icons_yiliao"
                        />

                    <TextView
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="医患咨询"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:textColor="@color/mediumslateblue"
                        />




                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_marginLeft="50dp"
                android:layout_marginTop="20dp"
                android:layout_width="125dp"
                android:layout_height="150dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="5dp"
                app:cardBackgroundColor="@color/white"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >

                    <ImageView
                        android:id="@+id/yongyaochangshi"
                        android:layout_marginLeft="13dp"
                        android:layout_marginTop="10dp"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@mipmap/icon_yao"
                        />

                    <TextView
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="用药常识"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:textColor="@color/mediumslateblue"
                        />

                </LinearLayout>

            </android.support.v7.widget.CardView>
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:orientation="horizontal"
            >

            <android.support.v7.widget.CardView
                android:layout_marginLeft="40dp"
                android:layout_marginTop="20dp"
                android:layout_width="125dp"
                android:layout_height="150dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="5dp"
                app:cardBackgroundColor="@color/white"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >

                    <ImageView
                        android:id="@+id/changjianjibing"
                        android:layout_marginLeft="13dp"
                        android:layout_marginTop="10dp"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@mipmap/hospital"
                        />

                    <TextView
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="常见疾病"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:textColor="@color/mediumslateblue"
                        />




                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_marginLeft="50dp"
                android:layout_marginTop="20dp"
                android:layout_width="125dp"
                android:layout_height="150dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="5dp"
                app:cardBackgroundColor="@color/white"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >

                    <ImageView
                        android:id="@+id/jiankangwenjuan"
                        android:layout_marginLeft="13dp"
                        android:layout_marginTop="10dp"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@mipmap/book"
                        />

                    <TextView
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="健康问卷"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:textColor="@color/mediumslateblue"
                        />

                </LinearLayout>

            </android.support.v7.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            >

            <android.support.v7.widget.CardView
                android:layout_marginLeft="60dp"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:gravity="center"
                app:cardCornerRadius="35dp"
                app:cardElevation="5dp"
                app:cardBackgroundColor="@color/cyan"
                >

                <ImageView
                    android:layout_marginRight="2dp"
                    android:id="@+id/bushu"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:textColor="@color/white"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@mipmap/run2"
                    />


            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_marginLeft="30dp"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:gravity="center"
                app:cardCornerRadius="35dp"
                app:cardElevation="5dp"
                app:cardBackgroundColor="@color/cyan"
                >

                <ImageView
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="1dp"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:textColor="@color/white"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@mipmap/heart"
                    />


            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_marginLeft="30dp"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:gravity="center"
                app:cardCornerRadius="35dp"
                app:cardElevation="5dp"
                app:cardBackgroundColor="@color/cyan"
                >

                <ImageView

                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:textColor="@color/white"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@mipmap/clock2"
                    />


            </android.support.v7.widget.CardView>





        </LinearLayout>







    </LinearLayout>

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <android.support.v7.widget.CardView
                android:layout_marginTop="10dp"
                android:layout_width="320dp"
                android:layout_height="130dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/whitesmoke"
                android:layout_gravity="center_horizontal"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    >

                    <android.support.v7.widget.CardView
                        android:layout_width="90dp"
                        android:layout_height="130dp"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="3dp"
                        app:cardBackgroundColor="@color/white"
                        >

                        <ImageView
                            android:id="@+id/iv_1"
                            android:layout_width="90dp"
                            android:layout_height="130dp"
                            android:background="@drawable/text_view_border_8"
                            android:adjustViewBounds="true"
                            android:scaleType="fitXY"
                            android:src="@mipmap/guanchangwu"
                            />


                    </android.support.v7.widget.CardView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        >

                        <TextView
                            android:paddingTop="8dp"
                            android:paddingLeft="8dp"
                            android:paddingRight="8dp"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:text="在“夹缝”中成长壮大的广场舞"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            />

                        <TextView

                            android:paddingLeft="8dp"
                            android:paddingRight="8dp"
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:text="不要以为天热，就能吓退大爷大妈对广场舞的热情，就算天气再热..."
                            android:textColor="@color/gray"
                            android:textSize="13sp"
                            />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:layout_marginRight="8dp"
                            >

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:src="@mipmap/oop2"
                                android:scaleType="center"
                                />
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:src="@mipmap/oop3"
                                android:scaleType="center"
                                />
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:src="@mipmap/oop1"
                                android:scaleType="center"
                                />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_marginTop="10dp"
                android:layout_width="320dp"
                android:layout_height="130dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/whitesmoke"
                android:layout_gravity="center_horizontal"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    >

                    <android.support.v7.widget.CardView
                        android:layout_width="90dp"
                        android:layout_height="130dp"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="3dp"
                        app:cardBackgroundColor="@color/white"
                        >

                        <ImageView
                            android:id="@+id/iv_2"
                            android:layout_width="90dp"
                            android:layout_height="130dp"
                            android:background="@drawable/text_view_border_8"
                            android:adjustViewBounds="true"
                            android:scaleType="fitXY"
                            android:src="@mipmap/taiji"
                            />


                    </android.support.v7.widget.CardView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        >

                        <TextView
                            android:paddingTop="8dp"
                            android:paddingLeft="8dp"
                            android:paddingRight="8dp"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:text="2019太极文化论坛启动仪式举行"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            />

                        <TextView
                            android:paddingLeft="8dp"
                            android:paddingRight="8dp"
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:text="太极拳是我国正式开展的武术套路体育项目，也是中国传统文化的精..."
                            android:textColor="@color/gray"
                            android:textSize="13sp"
                            />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:layout_marginRight="8dp"
                            >

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:src="@mipmap/oop2"
                                android:scaleType="center"
                                />
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:src="@mipmap/oop3"
                                android:scaleType="center"
                                />
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:src="@mipmap/oop1"
                                android:scaleType="center"
                                />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_marginTop="10dp"
                android:layout_width="320dp"
                android:layout_height="130dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/whitesmoke"
                android:layout_gravity="center_horizontal"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    >

                    <android.support.v7.widget.CardView
                        android:layout_width="90dp"
                        android:layout_height="130dp"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="3dp"
                        app:cardBackgroundColor="@color/white"
                        >

                        <ImageView
                            android:id="@+id/iv_3"
                            android:layout_width="90dp"
                            android:layout_height="130dp"
                            android:background="@drawable/text_view_border_8"
                            android:adjustViewBounds="true"
                            android:scaleType="fitXY"
                            android:src="@mipmap/entertainment"
                            />


                    </android.support.v7.widget.CardView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        >

                        <TextView
                            android:paddingTop="8dp"
                            android:paddingLeft="8dp"
                            android:paddingRight="8dp"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:text="迪丽热巴时尚大片风格极简,黑白微光下彰显文艺魅力。"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            />

                        <TextView
                            android:paddingLeft="8dp"
                            android:paddingRight="8dp"
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:text="迪丽热巴登时尚杂志五月刊封面，她变身双马尾女孩，在纯白背景下..."
                            android:textColor="@color/gray"
                            android:textSize="13sp"
                            />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:layout_marginRight="8dp"
                            >

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:src="@mipmap/oop2"
                                android:scaleType="center"
                                />
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:src="@mipmap/oop3"
                                android:scaleType="center"
                                />
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:src="@mipmap/oop1"
                                android:scaleType="center"
                                />





                        </LinearLayout>


                    </LinearLayout>



                </LinearLayout>



            </android.support.v7.widget.CardView>



        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QualityResourcesActivity"
    android:background="@mipmap/jianbian1"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:orientation="horizontal"
            >

            <android.support.v7.widget.CardView
                android:layout_marginLeft="40dp"
                android:layout_marginTop="20dp"
                android:layout_width="125dp"
                android:layout_height="150dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="5dp"
                app:cardBackgroundColor="@color/white"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >

                    <ImageView
                        android:id="@+id/medical_resources"
                        android:layout_marginLeft="13dp"
                        android:layout_marginTop="10dp"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@mipmap/hospital1"
                        />

                    <TextView
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:text="医疗资源"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        android:background="@drawable/text_view_border_4"
                        />




                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_marginLeft="50dp"
                android:layout_marginTop="20dp"
                android:layout_width="125dp"
                android:layout_height="150dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="5dp"
                app:cardBackgroundColor="@color/white"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >

                    <ImageView
                        android:id="@+id/food_resources"
                        android:layout_marginLeft="13dp"
                        android:layout_marginTop="10dp"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@mipmap/kfc"
                        />

                    <TextView
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:text="食品资源"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        android:background="@drawable/text_view_border_4"
                        />

                </LinearLayout>

            </android.support.v7.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:orientation="horizontal"
            >

            <android.support.v7.widget.CardView
                android:layout_marginLeft="40dp"
                android:layout_marginTop="20dp"
                android:layout_width="125dp"
                android:layout_height="150dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="5dp"
                app:cardBackgroundColor="@color/white"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >

                    <ImageView
                        android:id="@+id/drugstore_resources"
                        android:layout_marginLeft="13dp"
                        android:layout_marginTop="10dp"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@mipmap/medicine"
                        />

                    <TextView
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:text="药店资源"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        android:background="@drawable/text_view_border_4"
                        />




                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_marginLeft="50dp"
                android:layout_marginTop="20dp"
                android:layout_width="125dp"
                android:layout_height="150dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="5dp"
                app:cardBackgroundColor="@color/white"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >

                    <ImageView
                        android:id="@+id/community_resources"
                        android:layout_marginLeft="13dp"
                        android:layout_marginTop="10dp"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@mipmap/community"
                        />

                    <TextView
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:text="活动服务中心资源"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        android:background="@drawable/text_view_border_4"
                        />

                </LinearLayout>

            </android.support.v7.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:orientation="horizontal"
            >

            <android.support.v7.widget.CardView
                android:layout_marginLeft="40dp"
                android:layout_marginTop="20dp"
                android:layout_width="125dp"
                android:layout_height="150dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="5dp"
                app:cardBackgroundColor="@color/white"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >
                    <ImageView
                        android:id="@+id/traffic_resources"
                        android:layout_marginLeft="13dp"
                        android:layout_marginTop="10dp"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@mipmap/traffic"
                        />

                    <TextView
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:text="交通资源"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        android:background="@drawable/text_view_border_4"
                        />


                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_marginLeft="50dp"
                android:layout_marginTop="20dp"
                android:layout_width="125dp"
                android:layout_height="150dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="5dp"
                app:cardBackgroundColor="@color/white"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >

                    <ImageView
                        android:id="@+id/other_resources"
                        android:layout_marginLeft="13dp"
                        android:layout_marginTop="10dp"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@mipmap/others1"
                        />

                    <TextView
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:text="其他资源"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        android:background="@drawable/text_view_border_4"
                        />

                </LinearLayout>

            </android.support.v7.widget.CardView>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CounselingActivity"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="心理咨询的重要性"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="30sp"
            />
        <TextView
            android:paddingRight="38dp"
            android:paddingLeft="38dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="人到老年，生理功能开始衰退，出现视力、听力下降、记忆力减退，行动迟缓等变化。这些生理变化往往导致老人悲观失望、焦虑不安、精神不振、生活兴趣降低，使老年生活质量大大降低。研究老年人的心理健康问题，满足老人的身心健康需要，提供优质的老年心理护理，提高老年人的身体健康质量、健康素质已成为新世纪老年护理的重要目标。"
            android:textColor="@color/black"
            android:textSize="20sp"
            />
        
        <com.spark.submitbutton.SubmitButton
            android:layout_marginLeft="65dp"
            android:id="@+id/btn_cool"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="我准备好进行咨询"
            android:textColor="@color/gray"
            app:sub_btn_background="@color/white"
            app:sub_btn_duration="3000"
            app:sub_btn_line_color="@color/green"
            app:sub_btn_ripple_color="@color/green"
            app:sub_btn_tick_color="@color/white"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <Button
                android:id="@+id/btn_intelligent"
                android:layout_marginLeft="65dp"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:text="智能咨询"
                android:background="@drawable/button_border2"
                android:textColor="@color/white"
                />

            <Button
                android:id="@+id/btn_doctor"
                android:layout_marginLeft="65dp"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:text="医生咨询"
                android:background="@drawable/button_border2"
                android:textColor="@color/white"
                />

        </LinearLayout>





    </LinearLayout>

</LinearLayout>
